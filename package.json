{
  "name": "clipboard-manager",
  "version": "1.0.0",
  "description": "Multiplataforma clipboard manager con sincronizaci√≥n P2P via Tailscale",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "generate-icons": "node scripts/generate-icons.js",
    "postinstall": "node scripts/generate-icons.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win --config.win.target=portable",
    "build:portable": "electron-builder --win --config.win.target=portable",
    "package": "electron-packager . \"Clipboard Manager\" --platform=win32 --arch=x64 --out=release --overwrite --icon=assets/icon.ico"
  },
  "keywords": [
    "clipboard",
    "sync",
    "tailscale",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "canvas": "^3.2.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.clipboard.manager",
    "productName": "Clipboard Manager",
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "ClipboardManager-Portable.exe"
    },
    "files": [
      "main.js",
      "preload.js",
      "modules/**/*",
      "renderer/**/*",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
